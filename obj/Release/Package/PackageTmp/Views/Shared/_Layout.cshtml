<!DOCTYPE html>
<html style="font-family:'HelveticaPro'">
<head>
    <meta charset="utf-8">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <title>@ViewBag.Title - Mi Red Cúcuta</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/Content/Images/1482180585_share.ico" type="image/x-icon">
    <link href="~/Content/fontawesome/css/font-awesome.css" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" href="~/Content/navbar.css" type="text/css" />
    <link href="~/Content/loader/jquery.loading.css" rel="stylesheet" />
</head>
<body style="background-color:#f5f5f5;">
    <div class="row">
        <div class="col-sm-7">
            <img class="pull-right" src="~/Fotos/Logo.png" style="display:block;margin-left:auto;margin-right:auto;height:200px;width:auto" />
        </div>
        <div class="col-sm-4">
            <br /><br />
            <span class="label pull-right">@Html.Partial("_LoginPartial")</span>
            
        </div>
    </div>
           
   <div text-align="center" style="background-color:#f5f5f5;color:#f5f5f5;" class="navbar navbar-default" id="navPrincipal">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <div class="col-sm-8 col-sm-offset-2">
                    <ul style="margin:0 auto" class="nav navbar-nav">
                        <li>@Html.ActionLink("|    Mi Red - Cúcuta ", "Index", "Home")</li>
                        @if (User.IsInRole("Admin"))
    {

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Administración<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ciudades", "Index", "Cities")</li>
                            <li>@Html.ActionLink("Compañías", "Index", "Companies")</li>
                            <li>@Html.ActionLink("Departamentos", "Index", "Departments")</li>
                            <li>@Html.ActionLink("Paises", "Index", "Countries")</li>
                            <li>@Html.ActionLink("Puestos de Votación", "Index", "VotingPlaces")</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "Users")</li>
                        </ul>
                    </li>
}

                        @if (User.IsInRole("User"))
    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Administración<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Jefes", "Index", "Bosses")</li>
                            <li>@Html.ActionLink("Enlaces", "Index", "Links")</li>
                            <li>@Html.ActionLink("Coordinadores", "Index", "Coordinators")</li>
                            <li>@Html.ActionLink("Líderes", "Index", "Leaders")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("|    Votantes ", "Index", "Voters")</li>
                    <li>@Html.ActionLink("|    Reuniones ", "Index", "Dates")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Cargar Listados    |<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cargar Usuarios", "ImportExcel", "Excel")</li>
                            <li>@Html.ActionLink("Cargar Votantes", "ImportExcel", "Voters")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Cargar Listados    |<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cargar Usuarios", "ImportExcel", "Excel")</li>
                            <li>@Html.ActionLink("Cargar Votantes", "ImportExcel", "Voters")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Marketing    |<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Sms Masivos", "Create", "Sms")</li>
                        </ul>
                    </li>
}
                        @if (User.IsInRole("Secretario"))
    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Administración<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Jefes", "Index", "Bosses")</li>
                            <li>@Html.ActionLink("Enlaces", "Index", "Links")</li>
                            <li>@Html.ActionLink("Coordinadores", "Index", "Coordinators")</li>
                            <li>@Html.ActionLink("Líderes", "Index", "Leaders")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("|    Votantes ", "Index", "Voters")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Cargar Listados    |<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cargar Usuarios", "ImportExcel", "Excel")</li>
                            <li>@Html.ActionLink("Cargar Votantes", "ImportExcel", "Voters")</li>
                        </ul>
                    </li>
}
                        @if (User.IsInRole("Digitador"))
    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Administración<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Jefes", "Index", "Bosses")</li>
                            <li>@Html.ActionLink("Enlaces", "Index", "Links")</li>
                            <li>@Html.ActionLink("Coordinadores", "Index", "Coordinators")</li>
                            <li>@Html.ActionLink("Líderes", "Index", "Leaders")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("|    Votantes ", "Index", "Voters")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">|    Cargar Listados    |<b class="caret"></b> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cargar Usuarios", "ImportExcel", "Excel")</li>
                            <li>@Html.ActionLink("Cargar Votantes", "ImportExcel", "Voters")</li>
                        </ul>
                    </li>
}
                        @if (User.IsInRole("Reunion"))
    {
                    <li>@Html.ActionLink("|    Reuniones ", "Index", "Dates")</li>
}

                    </ul>

                </div>
                
            </div>
        </div>
    </div>
    <script src="~/Scripts/moment-with-locales.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Content/loader/jquery.loading.js"></script>
    <script src="~/Scripts/lodash.min.js"></script>
    <script src="~/Scripts/sweetalert2.all.js"></script>
    <div class="container body-content">
        @RenderBody()
    </div>

        <img src="~/Fotos/Footer.png" style="display:block;margin-left:auto;margin-right:auto;" class="img-responsive" />
        <footer class="container">
            
            <p>@DateTime.Now.Year - Desarrollado por Montenegro Ingeniería</p>
        </footer>

    
</body>
</html>
